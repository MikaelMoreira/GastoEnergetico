@model GastoEnergetico.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Mapa de Gastos Energéticos</h1>
    <h3>Controle os seus gastos enérgeticos e diminua o valor da conta de luz.</h3>
</div>
<div class="d-flex justify-content-center">
    <div class="card mr-5 bg-dark text-light" style="width: 25rem;">

        <div class="card-body">
            <h5 class="card-title">Categorias que mais consomem..</h5>
            <p class="card-text">

                <table class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th scope="col">Posição</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Consumo Mensal (Kwh)</th>
                            <th scope="col">Valor Mensal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var consumoCategoria in @Model.CategoriasQueMaisConsomem)
                        {
                            <tr>
                                <th scope="col">@consumoCategoria.Posicao</th>
                                <th scope="col">@consumoCategoria.NomeCategoria</th>
                                <th scope="col">@consumoCategoria.ConsumoMensalKwh</th>
                                <th scope="col">@consumoCategoria.ValorMensalKwh</th>
                            </tr>
}
                    </tbody>
                </table>
            </p>
        </div>
    </div>
